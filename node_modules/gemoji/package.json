{
  "name": "gemoji",
  "version": "4.2.0",
  "description": "GitHub emoji: gemoji",
  "license": "MIT",
  "keywords": [
    "gemoji",
    "emoji",
    "unicode",
    "name",
    "shortcode",
    "tag",
    "alias",
    "name"
  ],
  "repository": "https://github.com/wooorm/gemoji",
  "bugs": "https://github.com/wooorm/gemoji/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "index.json"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "mdast-zone": "^3.0.0",
    "nyc": "^10.0.0",
    "remark-cli": "^3.0.0",
    "remark-lint-table-pipe-alignment": "^1.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "request": "^2.75.0",
    "tape": "^4.6.0",
    "unist-builder": "^1.0.2",
    "xo": "^0.18.2"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-crawl": "node script/crawl-data",
    "build-data": "node script/build-data",
    "build-bundle": "browserify index.js --bare -s gemoji > gemoji.js",
    "build-mangle": "esmangle gemoji.js > gemoji.min.js",
    "build": "npm run build-crawl && npm run build-data && npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "gemoji.js"
    ]
  },
  "remarkConfig": {
    "settings": {
      "paddedTable": false
    },
    "plugins": [
      "preset-wooorm",
      [
        "remark-lint-table-pipe-alignment",
        false
      ],
      "./script/build-support"
    ]
  }
}
